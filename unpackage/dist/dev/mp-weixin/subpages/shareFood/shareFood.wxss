.mainbox {
  padding: 20rpx;
}
.mainbox .img-delete-box {
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(92, 113, 136, 0.6);
  position: absolute;
  right: 0rpx;
  top: 0;
  display: flex;
  border-bottom-left-radius: 10rpx;
}
.mainbox .img-delete-box .img-delete-icon {
  margin: auto;
  width: 60%;
  height: 60%;
}
.my-input-placeholder {
  color: #a0a0a0;
  font-size: 28rpx;
}
.u-textinput {
  padding: 0rpx 10rpx;
  line-height: 60rpx;
}
.selectBox {
  padding: 0rpx 10rpx;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  justify-content: space-around;
}
.selectBox .category {
  margin: auto;
  color: black;
}
.selectBox .rightText {
  color: #a0a0a0;
}
.locateBox {
  width: 100%;
  padding: 0rpx 10rpx;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  flex-direction: column;
}
.locateBox .topBox {
  display: flex;
  justify-content: space-between;
}
.locateBox .rightText {
  color: #a0a0a0;
}
.locateBox .addressBox {
  width: 95%;
  margin: 0 auto;
  padding: 8rpx 25rpx;
  border-radius: 15rpx;
  box-shadow: #c8c6c6 0rpx 0rpx 10rpx;
  margin-bottom: 30rpx;
}
.locateBox .addressBox text {
  display: block;
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.goods-carts {
  display: flex;
  flex-direction: column;
  position: fixed;
  left: 0;
  right: 0;
  z-index: 100;
  bottom: 10rpx;
  box-shadow: 0 -5px 5px -5px #e7e7e7;
}

